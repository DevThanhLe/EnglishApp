<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.UploadWord">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="20dp"
        app:cardElevation="200dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/card_image"
            android:orientation="vertical"
            android:padding="20dp"

            >
            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:background="@android:color/transparent"
                app:tint="@color/white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Word"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:src="@drawable/upload_data"
                android:layout_gravity="center"
                android:gravity="start|center_vertical"
                android:id="@+id/uploadImageWord"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/etWord"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_input"
                android:gravity="start|center_vertical"
                android:hint="Enter word"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:maxLines="1"
                android:inputType="text"
                android:padding="20dp" />

            <EditText
                android:id="@+id/etMeanWord"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_input"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:inputType="text"
                android:hint="Enter mean of word"
                android:padding="20dp" />
<!--            <EditText-->
<!--                android:id="@+id/etDescWord"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="70dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:background="@drawable/border_input"-->
<!--                android:textColorHint="@color/black"-->
<!--                android:textColor="@color/black"-->
<!--                android:gravity="start|center_vertical"-->
<!--                android:inputType="text"-->
<!--                android:maxLines="1"-->
<!--                android:hint="Enter description "-->
<!--                android:padding="20dp" />-->

            <Button
                android:id="@+id/bSaveWord"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="SAVE UPLOAD"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:background="@drawable/border_button"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>